@model GoldenBall.ViewModels.PlayerVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.ID" />
            <div class="form-group">
                <label asp-for="Player.Name" class="control-label"></label>
                <input asp-for="Player.Name" class="form-control" />
                <span asp-validation-for="Player.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.ClubID" class="control-label"></label>
                <select asp-for="Player.ClubID" class="form-control" asp-items="@Model.ClubList"></select>
                <span asp-validation-for="Player.ClubID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Nationality" class="control-label"></label>
                <input asp-for="Player.Nationality" class="form-control" />
                <span asp-validation-for="Player.Nationality" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Position" class="control-label"></label>
                <input asp-for="Player.Position" class="form-control" />
                <span asp-validation-for="Player.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Won" class="control-label"></label>
                <input asp-for="Player.Won" class="form-control" />
                <span asp-validation-for="Player.Won" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Winning_Year" class="control-label"></label>
                <input asp-for="Player.Winning_Year" class="form-control" />
                <span asp-validation-for="Player.Winning_Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
